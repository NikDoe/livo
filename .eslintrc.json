{
	"extends": "next/core-web-vitals",
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"object-curly-spacing": [
			"error",
			"always"
		],
		"semi": [
			"error",
			"always"
		],
		"quotes": [
			"error",
			"single"
		],
		"jsx-quotes": [
			"error",
			"prefer-single"
		],
		"max-len": [
			"error",
			{
				"code": 120,
				"ignoreComments": true,
				"ignoreUrls": true,
				"ignoreRegExpLiterals": true,
				"tabWidth": 2,
				"ignoreStrings": true
			}
		]
	}
}